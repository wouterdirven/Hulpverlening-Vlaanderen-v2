<body>
    <button class="crisis-button" onclick="showCrisisModal()" title="Noodhulp" aria-label="Noodhulp">‚ö†Ô∏è</button>

    <div id="crisisModal" class="crisis-modal" onclick="closeCrisisModalOnBackdrop(event)">
        <div class="crisis-content">
            <button class="close-modal" onclick="closeCrisisModal()" aria-label="Sluiten">√ó</button>
            <h2>Direct gevaar? Bel 112</h2>
            <div class="crisis-service">
                <h3>112</h3>
                <p>Politie, brandweer, ambulance - bij levensgevaar</p>
            </div>
            <div class="crisis-service">
                <h3>1712</h3>
                <p>Geweld, misbruik en kindermishandeling (24/7)</p>
            </div>
            <div class="crisis-service">
                <h3>1813</h3>
                <p>Zelfmoordlijn - voor zelfmoordgedachten (24/7)</p>
            </div>
            <div class="crisis-service">
                <h3>106</h3>
                <p>Tele-Onthaal - anoniem praten over alles (24/7)</p>
            </div>
            <button class="website-button" onclick="closeCrisisModal()" style="width: 100%; margin-top: 20px;">Sluit venster</button>
        </div>
    </div>

    <div class="container">
        <header>
            <h1>Wegwijzer Hulpverlening Vlaanderen</h1>
            <p class="subtitle">Vind de juiste hulp in enkele stappen</p>
        </header>

        <div id="questionSection" class="card">
            <div class="progress-container">
                <div class="progress-text" id="progressText">Vraag 1 van 5</div>
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill" style="width: 20%"></div>
                </div>
            </div>

            <div class="question" id="questionContent"></div>

            <div class="navigation">
                <button class="back-button hidden" id="backButton" onclick="goBack()">‚Üê Vorige</button>
            </div>
        </div>

        <div id="resultSection" class="result-section card">
            <div class="result-header">
                <h2>Dit past bij jouw situatie</h2>
            </div>

            <div id="primaryResult"></div>

            <button class="show-alternatives" id="showAlternativesBtn" onclick="toggleAlternatives()">Andere opties bekijken</button>

            <div class="alternatives" id="alternatives"></div>

            <div class="action-buttons">
                <button class="action-button" onclick="printResult()">üñ®Ô∏è Afdrukken</button>
                <button class="action-button" onclick="emailResult()">üìß Mailen</button>
                <button class="action-button" onclick="restartWegwijzer()">üîÑ Opnieuw beginnen</button>
            </div>
        </div>
    </div>

    <script>
        let data = {};
        let answers = {};
        let questionFlow = [];
        let currentStep = 0;

        async function loadData() {
            try {
                const response = await fetch('data.json');
                data = await response.json();
                initWegwijzer();
            } catch (error) {
                console.error('Fout bij laden data:', error);
                alert('Kon data niet laden. Controleer of data.json beschikbaar is.');
            }
        }

        function initWegwijzer() {
            questionFlow = ['crisis'];
            showQuestion('crisis');
        }

        function showQuestion(questionId) {
            const question = data.questions[questionId];
            if (!question) return;

            const content = document.getElementById('questionContent');
            const totalSteps = 5;
            const progress = Math.min(((currentStep + 1) / totalSteps) * 100, 100);

            document.getElementById('progressText').textContent = `Vraag ${currentStep + 1} van ${totalSteps}`;
            document.getElementById('progressFill').style.width = progress + '%';

            let html = `<h2>${question.text}</h2><div class="options">`;
            question.options.forEach(option => {
                html += `<button class="option-button" onclick="handleAnswer('${questionId}', '${option.value}')">${option.label}</button>`;
            });
            html += '</div>';

            content.innerHTML = html;

            const backButton = document.getElementById('backButton');
            if (currentStep > 0) {
                backButton.classList.remove('hidden');
            } else {
                backButton.classList.add('hidden');
            }

            document.getElementById('questionSection').style.display = 'block';
            document.getElementById('resultSection').style.display = 'none';
        }

        function handleAnswer(questionId, value) {
            answers[questionId] = value;

            if (questionId === 'crisis' && value === 'ja') {
                showCrisisModal();
                setTimeout(() => {
                    determineNextQuestion(questionId, value);
                }, 500);
                return;
            }

            determineNextQuestion(questionId, value);
        }

        function determineNextQuestion(questionId, value) {
            currentStep++;

            let nextQuestion = null;

            if (questionId === 'crisis') {
                nextQuestion = 'voor_wie';
            } else if (questionId === 'voor_wie') {
                nextQuestion = 'eerder_hulp';
            } else if (questionId === 'eerder_hulp') {
                nextQuestion = 'thema';
            } else if (questionId === 'thema') {
                const voorWie = answers.voor_wie;
                const thema = value;

                if (thema === 'mentaal' && voorWie === 'jongere') {
                    nextQuestion = 'sub_mentaal_jongere';
                } else if (thema === 'school') {
                    nextQuestion = 'sub_school';
                } else if (thema === 'opvoeding') {
                    nextQuestion = 'sub_opvoeding';
                } else {
                    showResult();
                    return;
                }
            } else {
                showResult();
                return;
            }

            if (nextQuestion) {
                questionFlow.push(nextQuestion);
                showQuestion(nextQuestion);
            }
        }

        function goBack() {
            if (currentStep > 0) {
                currentStep--;
                questionFlow.pop();
                const previousQuestion = questionFlow[questionFlow.length - 1];
                
                const lastQuestion = Object.keys(answers).pop();
                delete answers[lastQuestion];

                showQuestion(previousQuestion);
            }
        }

        function showResult() {
            const routingKey = buildRoutingKey();
            const serviceIds = data.routing[routingKey] || [];

            if (serviceIds.length === 0) {
                alert('Geen passende dienst gevonden. Probeer andere antwoorden.');
                goBack();
                return;
            }

            const primaryService = data.services.find(s => s.id === serviceIds[0]);
            const alternatives = serviceIds.slice(1).map(id => data.services.find(s => s.id === id)).filter(Boolean);

            document.getElementById('primaryResult').innerHTML = renderServiceCard(primaryService);

            if (alternatives.length > 0) {
                document.getElementById('showAlternativesBtn').style.display = 'block';
                document.getElementById('alternatives').innerHTML = alternatives.map(s => renderServiceCard(s, true)).join('');
            } else {
                document.getElementById('showAlternativesBtn').style.display = 'none';
            }

            document.getElementById('questionSection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'block';

            document.getElementById('progressFill').style.width = '100%';
        }

        function buildRoutingKey() {
            const voorWie = answers.voor_wie;
            const hulpNiveau = answers.eerder_hulp;
            const thema = answers.thema;
            const subAnswer = answers.sub_mentaal_jongere || answers.sub_school || answers.sub_opvoeding || '';

            let key = `${voorWie}_${hulpNiveau}_${thema}`;
            if (subAnswer) {
                key += `_${subAnswer}`;
            }

            if (!data.routing[key] && subAnswer) {
                key = `${voorWie}_${hulpNiveau}_${thema}`;
            }

            return key;
        }

        function renderServiceCard(service, isAlternative = false) {
            const altClass = isAlternative ? 'alternative' : '';
            return `
                <div class="service-card ${altClass}">
                    <h3>${service.name}</h3>
                    <p class="service-description">${service.description}</p>
                    <div class="contact-info">
                        <div class="contact-item"><strong>Telefoon:</strong> ${service.contact.phone}</div>
                        <div class="contact-item"><strong>E-mail:</strong> ${service.contact.email}</div>
                    </div>
                    <a href="${service.contact.website}" target="_blank" class="website-button">
                        ‚Üí Ga naar website
                    </a>
                </div>
            `;
        }

        function toggleAlternatives() {
            const alt = document.getElementById('alternatives');
            const btn = document.getElementById('showAlternativesBtn');
            
            if (alt.style.display === 'none' || alt.style.display === '') {
                alt.style.display = 'block';
                btn.textContent = 'Verberg andere opties';
            } else {
                alt.style.display = 'none';
                btn.textContent = 'Andere opties bekijken';
            }
        }

        function printResult() {
            window.print();
        }

        function emailResult() {
            const routingKey = buildRoutingKey();
            const serviceIds = data.routing[routingKey] || [];
            const primaryService = data.services.find(s => s.id === serviceIds[0]);

            if (!primaryService) return;

            const subject = encodeURIComponent('Hulpverlening info - Wegwijzer Vlaanderen');
            const body = encodeURIComponent(
                `Beste,\n\nVia de Wegwijzer Hulpverlening heb ik deze info gevonden:\n\n` +
                `${primaryService.name}\n` +
                `${primaryService.description}\n\n` +
                `Telefoon: ${primaryService.contact.phone}\n` +
                `E-mail: ${primaryService.contact.email}\n` +
                `Website: ${primaryService.contact.website}\n\n` +
                `Met vriendelijke groet`
            );

            window.location.href = `mailto:?subject=${subject}&body=${body}`;
        }

        function restartWegwijzer() {
            answers = {};
            questionFlow = [];
            currentStep = 0;
            initWegwijzer();
        }

        function showCrisisModal() {
            document.getElementById('crisisModal').style.display = 'block';
        }

        function closeCrisisModal() {
            document.getElementById('crisisModal').style.display = 'none';
        }

        function closeCrisisModalOnBackdrop(event) {
            if (event.target.id === 'crisisModal') {
                closeCrisisModal();
            }
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeCrisisModal();
            }
        });

        loadData();
    </script>
</body>
</html>
